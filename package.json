{
  "name": "coinwidget2",
  "version": "1.0.0",
  "description": "A Windows desktop widget for real-time cryptocurrency prices",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack",
    "start": "npm run build && electron .",
    "dev": "webpack && electron .",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "dist-portable": "npm run build && electron-builder --win dir",
    "dist-single": "npm run build && electron-builder --win portable",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cryptocurrency",
    "bitcoin",
    "ethereum",
    "desktop",
    "widget"
  ],
  "author": "CoinWidget Team",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^7.0.1",
    "@fortawesome/free-solid-svg-icons": "^7.0.1",
    "@fortawesome/react-fontawesome": "^3.0.2",
    "@types/ws": "^8.18.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.2.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.3",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "electron": "^38.1.0",
    "electron-builder": "^26.0.12",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1"
  },
  "build": {
    "appId": "com.coinwidget.app",
    "productName": "CoinWidget",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
